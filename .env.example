# Legislative Redline Tool - Environment Variables
# Copy this file to .env and fill in the values

# ===================
# Database
# ===================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=localdev
POSTGRES_DB=redline_db
POSTGRES_PORT=5438

# ===================
# Backend
# ===================
SECRET_KEY=dev-secret-key-change-in-production
BACKEND_PORT=8004
BACKEND_CORS_ORIGINS=http://localhost:5176,http://redline.localhost,http://redline-api.localhost

# ===================
# Frontend
# ===================
FRONTEND_PORT=5176
VITE_API_BASE_URL=http://redline-api.localhost

# ===================
# External APIs
# ===================
# Get a free API key from https://api.data.gov/signup/
GOVINFO_API_KEY=

# ===================
# Application Settings
# ===================
# How long to keep uploaded documents (hours)
DOCUMENT_RETENTION_HOURS=24

# How long to cache fetched statutes (days)
STATUTE_CACHE_DAYS=7
